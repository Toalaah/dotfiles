#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bspwm bsp-layout bc
# shellcheck shell=bash
# vim: ft=sh

get_layout() {
  layout=$(bsp-layout get)

  case "$layout" in
  "tiled")
    echo "ï©¯"
    ;;
  "monocle")
    num_nodes=$(bspc query -N -d focused -n .leaf | wc -l)
    echo "[$num_nodes]"
    ;;
  *) echo "?" ;;
  esac
}

get_layout
bspc subscribe desktop node | while read -r _; do
  get_layout
done
