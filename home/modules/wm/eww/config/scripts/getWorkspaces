#!/usr/bin/env bash
#
print_workspaces() {

local yuckCode; yuckCode=""
appendNewLineString() { printf "$yuckCode $1"; }

j=1; eval $(for i in $(bspc query -D --names); do
  echo "ws$j"="$i"
  j=$((j+1))
  done
)

# check if Occupied
j=1; eval $(for i in $(bspc query -D --names); do
  echo "o$j"=$(bspc query -D -d .occupied --names | grep "$ws$j")
  j=$((j+1))
  done
)

# check if Focused
j=1; eval $(for i in $(bspc query -D --names); do
  echo "f$j"=$(bspc query -D -d focused --names | grep "$ws$j")
  j=$((j+1))
  done
)

# numDesktops=
yuckCode='(box :class "workspaces" :spacing 10 :orientation "h" :valign "center" :halign "center" :space-evenly "false"'
j=1; for i in $(bspc query -D --names); do
  isfocussedVar=f$j
  isoccupiedVar=o$j
  yuckCode=$(appendNewLineString "(eventbox :class \"event-listener isfocussed${!isfocussedVar} isoccupied${!isoccupiedVar}\" :onclick \"bspc desktop -f $ws$j\" (label :class \"square-content\" :text \"$i\"))")
  j=$((j+1))
done

yuckCode=$(appendNewLineString ")")
echo "$yuckCode"
}

print_workspaces
bspc subscribe all | while read -r _ ; do
print_workspaces
done
