[global]
    font = Iosevka Nerd Font
    # s=summary
    # b=body
    format = "<b>%s</b>\n%b"
    # sort messages by urgency
    sort = yes
    # Show num hidden messages
    indicate_hidden = yes
    # left | right | center
    alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    transparency = 25
    idle_threshold = 120
    # show notifications on the monitor on which the mouse is active
    follow = mouse
    show_indicators = yes
    padding = 8
    horizontal_padding = 12
    separator_color = auto

[urgency_low]
    background = "#2D2D2D"
    foreground = "#D3D0C8"
    timeout = 5

[urgency_normal]
    background = "#2D2D2D"
    foreground = "#D3D0C8"
    timeout = 5

[urgency_critical]
    background = "#2D2D2D"
    foreground = "#D3D0C8"
    timeout = 0

