# vim: ft=neomuttrc

# auth settings
set from      = "`pass neomutt/user`"
set real_name = "`pass neomutt/name`"
set imap_user = "`pass neomutt/user`"
set imap_pass = "`pass neomutt/pass`"
set spoolfile = "imaps://imap.fastmail.com"
set smtp_url  = "smtp://$imap_user:$imap_pass@smtp.fastmail.com:587"

# set up mailboxes
set folder    = $spoolfile
set postponed = "+Drafts"
set record    = "+Sent"
set mbox      = "+Archive"

mailboxes $postponed $record $trash
